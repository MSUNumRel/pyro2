# simple inputs files for the SR sod shock tube

[driver]
max_steps = 2000
tmax = 10.0

[io]
basename = gr_tov
dt_out = 0.05

[mesh]
nx = 500
xmin = 1e3
xmax = 15e5
xlboundary = outflow
xrboundary = outflow

[tov]
rho0_c = 1.85e15

[eos]
gamma = 2.0
K = 1e2

[gr_radial_solver]
riemann = HLLE

[gr]
evolve_metric = 0